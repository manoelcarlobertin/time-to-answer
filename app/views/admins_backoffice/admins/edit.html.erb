<h1 class="h3 mb-2 text-gray-800">Editando Administrador</h1>

<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Administradores</h6>
  </div>
  <div class="card-body">
    <%= form_with(model: [:admins_backoffice, @admin], local: true) do |form| %>
      <div class="form-group">
        <%= form.label :email, class: "font-weight-bold" %>
        <%= form.email_field :email, class: "form-control", placeholder: "Email do administrador", required: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Senha", class: "font-weight-bold" %>
        <%= form.password_field :password, class: "form-control", placeholder: "Senha", minlength: 6, autocomplete: "new-password" %>
        <small class="form-text text-muted">Deixe em branco se não quiser alterar a senha</small>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirmação da Senha", class: "font-weight-bold" %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirmação da Senha", minlength: 6, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= form.submit "Salvar", class: "btn btn-primary btn-sm px-3" %>
        <%= link_to "Voltar", admins_backoffice_admins_path, class: "btn btn-secondary ml-2" %>
      </div>
    <% end %>
  </div>
</div>

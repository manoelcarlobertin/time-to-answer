<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>TimeToAnswer</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'backoffice/users_backoffice' %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Time To Answer</a>
        </div>
        <!-- /.navbar-header -->

        <ul class="nav navbar-top-links navbar-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-user fa-fw"></i> <%#= current_user.email %> <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li>
                <%= link_to users_backoffice_welcome_index_path do %>
                  <i class="fa fa-user fa-fw"></i> Perfil
                <% end %>
              </li>
              <li>
                <%#= link_to users_backoffice_profile_path do %>
                  <i class="fa fa-gear fa-fw"></i> Configurações
                <%# end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out fa-fw"></i> Sair
                <% end %>
              </li>
            </ul>
          </li>
        </ul>

        <div class="navbar-default sidebar" role="navigation">
          <div class="sidebar-nav navbar-collapse">
            <ul class="nav" id="side-menu">
              <li>
                <%= link_to users_backoffice_welcome_index_path do %>
                  <i class="fa fa-dashboard fa-fw"></i> Dashboard
                <% end %>
              </li>
              <li>
                <%#= link_to users_backoffice_profile_path do %>
                  <i class="fa fa-user fa-fw"></i> Dados do Perfil
                <%# end %>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <!-- Page Content -->
      <div id="page-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <h3>Layout de Users_backoffice</h3>
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'backoffice/users_backoffice' %>

    <% if notice %>
      <%= javascript_tag do %>
        $.bootstrapGrowl('<%= notice %>', {
          type: 'success',
          align: 'right',
          allow_dismiss: true,
          stackup_spacing: 10
        });
      <% end %>
    <% end %>

    <% if alert %>
      <%= javascript_tag do %>
        $.bootstrapGrowl('<%= alert %>', {
          type: 'danger',
          align: 'right',
          allow_dismiss: true,
          stackup_spacing: 10
        });
      <% end %>
    <% end %>
  </body>
</html>
